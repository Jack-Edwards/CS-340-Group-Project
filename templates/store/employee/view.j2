<html>
    <head>
        <title>View All Employees</title>
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='css/style.css') }}">
    </head>
    <body>
        <a href="/">Return Home</a>
        <div class="flexbox center-text">
            <div class="margin-5 border-gray overflow">
                <h2 class="section-header">Employee List</h2>
                <table class="border-collapse margin-5 width-auto">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone Number</th>
                            <th>Street</th>
                            <th>City</th>
                            <th>ZIP Code</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for employee in employees %}
                        <tr>
                            <td>{{ employee.id }}</td>
                            <td>{{ employee.firstName }}</td>
                            <td>{{ employee.lastName }}</td>
                            <td>{{ employee.phone }}</td>
                            <td>{{ employee.street }}</td>
                            <td>{{ employee.city }}</td>
                            <td>{{ employee.zip }}</td>
                            <td>{{ employee.state }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>