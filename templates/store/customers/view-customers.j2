<html>
    <head>
        <title>View Customers</title>
        <link rel= "stylesheet" type= "text/css" href= "{{ url_for('static',filename='css/style.css') }}">
    </head>
    <body>
        <a href="/">Return Home</a>
        <div class="flexbox center-text">
            <div class="margin-5 border-gray overflow">
                <h2 class="section-header">Customer List</h2>
                <table class="border-collapse margin-5 width-auto">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Street</th>
                            <th>City</th>
                            <th>Zip</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for person in customers_list %}
                        <tr>
                            <td>{{ person.id }}</td>
                            <td>{{ person.firstName }}</td>
                            <td>{{ person.lastName }}</td>
                            <td>{{ person.phone }}</td>
                            <td>{{ person.street }}</td>
                            <td>{{ person.city }}</td>
                            <td>{{ person.zip }}</td>
                            <td>{{ person.state }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>