<html>
<head>
    <title>Add Item to Order</title>
    <style>
        .center {
            position: absolute;
            left: 45%;
            width: 300px;
            text-align: left;
            border: 2px solid grey;
            padding-left:50px;
        }

    </style>
</head>
<body>
    <a href="/">Return Home</a>
    <div class="center"> 
        <h1>Add Item to Order</h1>
        <form action="/customer/order/assign-item" method="post">
            <label for="orderid">Order ID:</label>
            <select name="orderid"> 
                {% for o in orders %} 
                    <option value="{{ o.id }}"> {{ o.id }} </option>
                {% endfor %}
            </select>
            
            <br> <br>

            <label for="itemid">Item:</label>
            <select name="itemid"> 
                {% for i in items %} 
                    <option value="{{ i.id }}"> {{ i.name }} </option>
                {% endfor %}
            </select>
            
            <br> <br>

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity"><br> <br>

            <input type="submit" value="Submit">
        </form>
    </div>
</body>
</html>
